<h1 id="index-title">Seattle Karate Leagues</h1>

<h3>Current Standings</h3>

<div id="table-container">
  <div id="league-A-container">
    <h3><%= @league1.name %></h3>
    <table class="league-table">
      <thead>
        <tr>
          <th>Player</th>
            <% i = 0 %>
            <% while i < @league1.number_of_rounds do %>
            <th class="col-width">
              <%= i += 1 %>
            </th>
            <% end %>
          <th>Wins</th>
        </tr>
      </thead>
      <tbody>
        <% @league1.competitors.all.each do |competitor| %>
          <tr>
            <td class="competitor-name">
            <%= competitor.name %>
            </td>
            <% @league1.number_of_rounds.times do |round| %>

              <td class="col-width">
              <% if competitor.results.key?(:"r#{round + 1}") %>
                <%= competitor.results[:"r#{round + 1}"] %>
              <% else %>
                -
              <% end %>
              </td>

            <% end %>
            <td>
              <%= competitor.wins_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div id="league-B-container">
    <h3><%= @league1.name %></h3>
    <table class="league-table">
      <thead>
        <tr>
          <th>Player</th>
            <% i = 0 %>
            <% while i < @league2.number_of_rounds do %>
            <th class="col-width">
              <%= i += 1 %>
            </th>
            <% end %>
          <th>Wins</th>
        </tr>
      </thead>
      <tbody>
        <% @league2.competitors.all.each do |competitor| %>
          <tr>
            <td class="competitor-name">
            <%= competitor.name %>
            </td>
            <% i = 0 %>
            <% while i < @league2.number_of_rounds do %>
              <td class="col-width">
                -
                <% i += 1 %>
              </td>
            <% end %>
            <td>
              <%= competitor.wins_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>

