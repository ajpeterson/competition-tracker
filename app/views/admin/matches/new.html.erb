<h1>Create a new match in league <%= @current_league.name %></h1>
<div>

  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @match, url: {action: "create"}, html: {id: "create_match_form"} do |f| %>
  <%= f.select :round_number, @round_options %>
  <%= f.select :competitor_one_id, @competitor_options, {include_blank: 'None'} %>
  <%= f.select :competitor_two_id, @competitor_options, {include_blank: 'None'} %>

  <%= f.submit "Create" %>
  <% end %>
</div>
